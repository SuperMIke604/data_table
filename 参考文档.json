  // 基于可视化编辑原理的保存机制
  async function saveRowDataSimple(sheetKey, rowIndex, messageIndex) {
    try {
      // 1. 从源数据重新加载（参考可视化编辑原理）
      const chat = SillyTavern_API_ACU.chat;
      let sourceData = null;
      if (chat && chat.length > 0) {
        for (let i = chat.length - 1; i >= 0; i--) {
          if (!chat[i].is_user && chat[i].TavernDB_ACU_Data) {
            sourceData = chat[i].TavernDB_ACU_Data;
            break;
          }
        }
      }
      
      if (!sourceData) {
        return;
      }
      
      // 2. 创建深拷贝（参考可视化编辑原理）
      const newJsonData = JSON.parse(JSON.stringify(sourceData));
      
      // 3. 获取用户输入的数据（单个输入框包含整行数据）
      const $overviewArea = $popupInstance_ACU.find(`#${SCRIPT_ID_PREFIX_ACU}-data-overview-area`);
      const $detailsArea = $overviewArea.find(`.message-details[data-message-index="${messageIndex}"]`);
      // 获取该行的单个输入框（包含整行数据）
      const $rowInput = $detailsArea.find(`tr[data-row-index="${rowIndex}"][data-sheet-key="${sheetKey}"] .cell-input`);
      
      if ($rowInput.length === 0) {
        return;
      }
      
      // 读取输入框内容，按 | 分隔符分割为数组
      const inputValue = $rowInput.val();
      const newRowData = inputValue ? inputValue.split(' | ').map(val => val.trim()) : [];
      
      // 确保数组长度与原行数据一致
      const originalRowData = newJsonData[sheetKey].content[rowIndex + 1] ? newJsonData[sheetKey].content[rowIndex + 1].slice(1) : [];
      while (newRowData.length < originalRowData.length) {
        newRowData.push('');
      }
      
      // 4. 更新深拷贝中的数据
      const table = newJsonData[sheetKey];
      if (!table || !table.content || !table.content[rowIndex + 1]) {
        return;
      }
      
      // 先删除原始数据，再更新新数据
      const originalRow = table.content[rowIndex + 1];
      table.content.splice(rowIndex + 1, 1); // 删除原始行
      table.content.splice(rowIndex + 1, 0, [null, ...newRowData]); // 插入新行
      
      // 调试日志
      console.log('保存数据详情:', {
        sheetKey,
        rowIndex,
        originalRow: originalRow.slice(1),
        newRowData
      });
      
      // 5. 更新全局数据（参考可视化编辑原理）
      currentJsonTableData_ACU = newJsonData;
      
      // 6. 保存到聊天记录（传递messageIndex以确保保存到原楼层）
      await saveJsonTableToChatHistory_ACU(messageIndex);
      
      // 7. 根据表格类型，只更新对应的世界书条目，避免更新其他表格
      const tableName = table.name ? table.name.trim() : '';
      
      if (tableName === '总结表') {
        // 只更新总结表的世界书条目
        await updateSummaryTableEntries_ACU(table);
      } else if (tableName === '故事主线') {
        // 只更新主线事件表的世界书条目
        await updateOutlineTableEntry_ACU(table);
      } else if (tableName === '重要角色表') {
        // 只更新重要角色表的世界书条目
        await updateImportantPersonsRelatedEntries_ACU(table);
      } else {
        // 对于其他表格，更新可读数据库条目（但不包含特殊表格）
        await updateReadableLorebookEntry_ACU(false);
      }
      
      // 8. 刷新显示
      loadMessageDetails_ACU(messageIndex, $detailsArea);
      
      showToastr_ACU('success', '数据已保存');
      
    } catch (error) {
      console.error('保存失败:', error);
      showToastr_ACU('error', `保存失败: ${error.message}`);
    }
  }

