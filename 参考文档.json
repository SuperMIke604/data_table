  // 加载消息详情内容
  function loadMessageDetails_ACU(messageIndex, $detailsArea) {
    debugLog('loadMessageDetails_ACU 被调用', { messageIndex });
    
    const message = SillyTavern_API_ACU.chat[messageIndex];
    if (!message || !message.TavernDB_ACU_Data) return;
    
    const data = message.TavernDB_ACU_Data;
    const $content = $detailsArea.find('.details-content');
    
    // 展示表格形式的数据，支持条目级别的编辑和删除
    let html = '<div class="expanded-details-content">';
    
    const tableKeys = Object.keys(data).filter(k => k.startsWith('sheet_'));
    
    if (tableKeys.length === 0) {
      html += '<p style="color: #888; text-align: center;">没有数据表格</p>';
    } else {
      tableKeys.forEach(sheetKey => {
        const table = data[sheetKey];
        if (!table || !table.name || !table.content) return;
        
        html += `<div class="table-section" data-sheet-key="${sheetKey}">`;
        html += `<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">`;
        html += `<h4 class="table-title" style="margin: 0; color: #fff;">${escapeHtml_ACU(table.name)}</h4>`;
        html += `<button class="delete-table-btn" data-sheet-key="${sheetKey}" data-message-index="${messageIndex}" style="
          background: #dc3545; color: white; border: none; padding: 5px 10px; 
          border-radius: 3px; cursor: pointer; font-size: 12px;
        ">删除表格</button>`;
        html += `</div>`;
        
        // 显示表格元数据
        if (table.sourceData && table.sourceData.note) {
          html += `<div class="table-metadata">`;
          html += `<p style="margin: 5px 0; color: #ccc;">备注: ${escapeHtml_ACU(table.sourceData.note)}</p>`;
          html += `</div>`;
        }
        
        // 显示表格内容
        html += `<div class="table-scroll-container">`;
        html += `<table class="data-table">`;
        
        // 表头 - 简化为两列：内容和操作
        html += '<thead><tr>';
        html += `<th>条目内容</th>`;
        html += '<th style="width: 80px; text-align: center;">操作</th>';
        html += '</tr></thead>';
        
        // 数据行
        html += '<tbody>';
        const rows = table.content.slice(1);
        rows.forEach((row, rowIndex) => {
          const rowData = row.slice(1);
          // 将所有字段值用 | 分隔符合并为一个字符串
          const combinedValue = rowData.map(cell => cell || '').join(' | ');
          
          html += `<tr data-row-index="${rowIndex}" data-sheet-key="${sheetKey}">`;
          
          // 单个输入框 - 包含整行数据（用 | 分隔）
          html += `<td class="editable-cell">`;
          html += `<textarea class="cell-input" `;
          html += `data-sheet-key="${sheetKey}" data-row-index="${rowIndex}" `;
          html += `data-message-index="${messageIndex}">${escapeHtml_ACU(combinedValue)}</textarea>`;
          html += `</td>`;
          
          // 操作列 - 按钮上下排列
          html += `<td style="text-align: center; vertical-align: middle;">`;
          html += `<div style="display: flex; flex-direction: column; gap: 5px; align-items: center;">`;
          html += `<button class="save-row-btn" data-sheet-key="${sheetKey}" data-row-index="${rowIndex}" `;
          html += `data-message-index="${messageIndex}" style="
            background: #28a745; color: white; border: none; padding: 4px 8px; 
            border-radius: 3px; cursor: pointer; font-size: 11px; width: 60px;
          ">保存</button>`;
          html += `<button class="delete-row-btn" data-sheet-key="${sheetKey}" data-row-index="${rowIndex}" `;
          html += `data-message-index="${messageIndex}" style="
            background: #dc3545; color: white; border: none; padding: 4px 8px; 
            border-radius: 3px; cursor: pointer; font-size: 11px; width: 60px;
          ">删除</button>`;
          html += `</div>`;
          html += `</td>`;
          
          html += '</tr>';
        });
        
        html += '</tbody>';
        html += '</table>';
        html += `</div>`;
        
        html += `</div>`;
      });
    }
    
    html += '</div>';
    
    $content.html(html);
    
    // 绑定详情区域的事件
    bindDetailsEvents_ACU($detailsArea, messageIndex);
  }
  
  // 绑定详情区域事件
  function bindDetailsEvents_ACU($detailsArea, messageIndex) {
    debugLog('bindDetailsEvents_ACU 被调用', { messageIndex });
    
    // 移除之前的事件绑定，避免重复绑定
    $detailsArea.off('click.details');
    
    // 保存行按钮
    $detailsArea.on('click.details', '.save-row-btn', async function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      const sheetKey = $(this).data('sheet-key');
      const rowIndex = $(this).data('row-index');
      console.log('点击保存行，表格:', sheetKey, '行索引:', rowIndex);
      
      await saveRowInDetails(sheetKey, rowIndex, messageIndex);
    });
    
    // 删除行按钮
    $detailsArea.on('click.details', '.delete-row-btn', async function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      const sheetKey = $(this).data('sheet-key');
      const rowIndex = $(this).data('row-index');
      console.log('点击删除行，表格:', sheetKey, '行索引:', rowIndex);
      
      await deleteRowInDetails(sheetKey, rowIndex, messageIndex);
    });
    
    // 删除表格按钮
    $detailsArea.on('click.details', '.delete-table-btn', async function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      const sheetKey = $(this).data('sheet-key');
      console.log('点击删除表格，表格:', sheetKey);
      
      await deleteTableInDetails(sheetKey, messageIndex);
    });
    
    // 回车键保存单元格（可选功能）
    $detailsArea.on('keydown.details', '.cell-input', function(e) {
      if (e.key === 'Enter' && e.ctrlKey) {
        e.preventDefault();
        const $row = $(this).closest('tr');
        const sheetKey = $row.data('sheet-key');
        const rowIndex = $row.data('row-index');
        if (sheetKey !== undefined && rowIndex !== undefined) {
          saveRowInDetails(sheetKey, rowIndex, messageIndex);
        }
      }
    });
    
    // 添加focus和blur事件处理，用于高亮显示
    $detailsArea.on('focus.details', '.cell-input', function() {
      $(this).css({
        'background': '#2a2a2a'
      });
    });
    
    $detailsArea.on('blur.details', '.cell-input', function() {
      $(this).css({
        'background': '#1a1a1a'
      });
    });
    
    // 自适应高度函数
    function autoResizeTextarea(textarea) {
      textarea.style.height = 'auto';
      textarea.style.height = Math.max(40, textarea.scrollHeight) + 'px';
    }
    
    // 初始化所有textarea的高度
    $detailsArea.find('.cell-input').each(function() {
      autoResizeTextarea(this);
    });
    
    // 监听输入和粘贴事件，自动调整高度
    $detailsArea.on('input.details paste.details', '.cell-input', function() {
      autoResizeTextarea(this);
    });
    
    // 监听滚动事件，确保高度正确
    $detailsArea.on('scroll.details', '.cell-input', function() {
      autoResizeTextarea(this);
    });
  }
  
  
  // 删除表格 - 基于可视化编辑原理
  async function deleteTableInDetails(sheetKey, messageIndex) {
    debugLog('deleteTableInDetails 被调用', { sheetKey, messageIndex });
    
    try {
      // 1. 从指定的消息获取源数据
      const message = SillyTavern_API_ACU.chat[messageIndex];
      if (!message || !message.TavernDB_ACU_Data) {
        showToastr_ACU('error', '无法找到指定消息的数据');
        return;
      }
      
      const sourceData = message.TavernDB_ACU_Data;
      const table = sourceData[sheetKey];
      if (!table) {
        showToastr_ACU('error', '无法找到指定的表格');
        return;
      }
      
      if (!confirm(`确定要删除表格 "${table.name}" 吗？此操作不可撤销。`)) {
        return;
      }
      
      // 开始删除流程
      // 2. 创建深拷贝
      const newJsonData = JSON.parse(JSON.stringify(sourceData));
      
      // 3. 删除表格
      delete newJsonData[sheetKey];
      
      // 4. 更新全局数据
      currentJsonTableData_ACU = newJsonData;
      
      // 5. 保存到聊天记录（传递messageIndex以确保保存到原楼层）
      await saveJsonTableToChatHistory_ACU(messageIndex);
      
      // 根据表格类型，只更新对应的世界书条目，避免更新其他表格
      const tableName = table.name ? table.name.trim() : '';
      
      if (tableName === '总结表') {
        // 删除总结表的世界书条目（因为表格已被删除）
        await updateSummaryTableEntries_ACU(null);
      } else if (tableName === '故事主线') {
        // 删除主线事件表的世界书条目（因为表格已被删除）
        await updateOutlineTableEntry_ACU(null);
      } else if (tableName === '重要角色表') {
        // 删除重要角色表的世界书条目（因为表格已被删除）
        await updateImportantPersonsRelatedEntries_ACU(null);
      } else {
        // 对于其他表格，更新可读数据库条目（但不包含特殊表格）
        await updateReadableLorebookEntry_ACU(false);
      }
      
      // 7. 刷新显示
      showDataOverview_ACU();
      
      showToastr_ACU('success', '表格已删除');
    } catch (error) {
      console.error('删除表格失败:', error);
      showToastr_ACU('error', `删除失败: ${error.message}`);
    }
  }
  
